    ğŸ’¬ ChallengeAccepted! enrollment: Enrollment
        sendEmail
          params:
            template: ChallengeAcceptedEmail
            data: ^enrollment
            to: ^enrollment.judge.email

    ğŸ’¬ ChallengeRejected!
        params:
          - challenge: Challenge

        sendEmail with:
          template: ChallengeRejectedEmail
          data: ^challenge
          to: ^challenge.owner.email

