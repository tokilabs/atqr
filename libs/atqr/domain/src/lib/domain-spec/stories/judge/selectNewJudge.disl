Domain ATQR
context Challenge

entity Challenge

  ⚙️ AskPlayerForNewJudge
      listening:
      - RejectedParticipateJudgeRequest!

    @NotificationService.SelectNewJudge
    ⏰ NewDayStarted!
     //code if(pass X days send again, if pass Y days cancel)
     
    📣 AskedPlayerForNewJudge!




  ⚙️ RequestJudgeParticipation? @challenge @contactJudge

    @NotificationService.SupervisionRequested
    this.addInvite()

    ⏰ NewDayStarted!
      if(pass X days send again, if pass Y days cancel)

    📣 RequestedJudgeParticipation!



  ⚙️ addInvite @contactJudge

    invitee = new Invitee(contactJudge)

    this.invitees.push(invitee)



service NotificationService

 💬 AskPlayerForNewJudge? :challenge
    sendEmail
      template: emailAskPlayerForNewJudge
      data: Challenge
      to: challenge.player



 💬 RequestJudgeParticipation? :challenge :contactJudge
     sendEmail
       template: emailRequestJudgeParticipation
       data: Challenge
       to: contactJudge

